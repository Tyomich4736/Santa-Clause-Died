<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ModeChoiceActivity">

    <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="Выберите режим игры"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/chooseGameModeLabel"
                android:textSize="30sp"
                android:layout_marginBottom="20sp"
                android:typeface="normal"
                android:textColor="@color/gray"/>
        <Button
                android:text="Одиночный режим"
                android:layout_width="300dp"
                android:layout_height="100dp" android:id="@+id/singleModeButton"
                android:textSize="30sp" app:cornerRadius="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="3dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:onClick="onSingleModeButtonClick" android:backgroundTint="@color/red"/>
        <Button
                android:text="Парный режим"
                android:layout_width="300dp"
                android:layout_height="100dp" android:id="@+id/pairModeButton"
                android:textSize="30sp" app:cornerRadius="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="3dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:onClick="onPairModeButtonClick" android:backgroundTint="@color/red"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>