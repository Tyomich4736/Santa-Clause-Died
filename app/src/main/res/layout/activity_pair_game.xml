<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GameActivity">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="15dp">
                <TextView
                        android:text="Игрок 1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/playerOneLabel"
                        android:textSize="24sp" app:layout_constraintEnd_toEndOf="parent"
                        android:gravity="center"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        android:typeface="normal"
                        android:textColor="@color/gray" android:layout_weight="1"/>
                <TextView
                        android:text="Игрок 2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/playerTwoLabel"
                        android:textSize="24sp" app:layout_constraintEnd_toEndOf="parent"
                        android:gravity="center"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        android:typeface="normal"
                        android:textColor="@color/gray" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1"
                    android:paddingTop="15dp">
                <TextView
                        android:text="Фраза:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/playerOnePhraseTextLabel"
                        android:textSize="20sp" app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        android:typeface="normal"
                        android:textColor="@color/gray" android:layout_marginStart="30dp" android:layout_weight="1"/>
                <TextView
                        android:text="Фраза:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/playerTwoPhraseTextLabel"
                        android:textSize="20sp" app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        android:typeface="normal"
                        android:textColor="@color/gray" android:layout_marginStart="30dp" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1"
                    android:paddingTop="5dp">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" android:id="@+id/playerOnePhraseText"
                        android:textSize="24sp" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        app:layout_constraintTop_toBottomOf="@+id/phraseTextLabel" android:layout_marginTop="20dp"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" android:id="@+id/playerTwoPhraseText"
                        android:textSize="24sp" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        app:layout_constraintTop_toBottomOf="@+id/phraseTextLabel" android:layout_marginTop="20dp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1"
                    android:paddingTop="15dp">
                <TextView
                        android:text="Эмоция:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/playerOneEmotionTextLabel"
                        android:textSize="20sp" app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        android:typeface="normal"
                        android:textColor="@color/gray" android:layout_marginStart="30dp" android:layout_weight="1"/>
                <TextView
                        android:text="Эмоция:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/playerTwoEmotionTextLabel"
                        android:textSize="20sp" app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        android:typeface="normal"
                        android:textColor="@color/gray" android:layout_marginStart="30dp" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1"
                    android:paddingTop="15dp">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_height="wrap_content" android:id="@+id/playerOneEmotionText"
                        android:textSize="28sp" app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/emotionTextLabel"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_height="wrap_content" android:id="@+id/playerTwoEmotionText"
                        android:textSize="28sp" app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/emotionTextLabel"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1"
                    android:paddingTop="15dp">
                <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_weight="1">
                    <TextView
                            android:text="Номер эмоции: "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/playerOneEmotionNumberTextLabel"
                            android:textSize="20sp"
                            android:textColor="@color/gray"/>
                    <TextView
                            android:text="0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/playerOneEmotionNumberText"
                            android:textSize="20sp"
                            android:textColor="@color/gray"/>
                </LinearLayout>

                <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_weight="1">
                    <TextView
                            android:text="Номер эмоции: "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/playerTwoEmotionNumberTextLabel"
                            android:textSize="20sp"
                            android:textColor="@color/gray"/>
                    <TextView
                            android:text="0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/playerTwoEmotionNumberText"
                            android:textSize="20sp"
                            android:textColor="@color/gray"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingTop="15dp">
                <Button
                        android:text="Сменить эмоцию"
                        android:layout_width="300dp"
                        android:layout_height="60dp" android:id="@+id/playerOneNextEmotionButton"
                        android:textSize="20sp" app:cornerRadius="15dp"
                        android:onClick="onNextPlayerOneEmotionButtonClick" android:backgroundTint="@color/red"/>
                <Button
                        android:text="{{---}}"
                        android:layout_width="150dp"
                        android:layout_height="60dp" android:id="@+id/bothPlayersNextEmotionButton"
                        android:textSize="20sp" app:cornerRadius="15dp"
                        android:layout_marginStart="7dp"
                        android:layout_marginEnd="7dp"
                        android:onClick="onNextEmotionsButtonClick" android:backgroundTint="@color/red"/>
                <Button
                        android:text="Сменить эмоцию"
                        android:layout_width="300dp"
                        android:layout_height="60dp" android:id="@+id/playerTwoNextEmotionButton"
                        android:textSize="20sp" app:cornerRadius="15dp"
                        android:onClick="onNextPlayerTwoEmotionButtonClick" android:backgroundTint="@color/red"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingTop="15dp"
                    android:paddingBottom="20dp">
                <Button
                        android:text="Сменить эмоцию и фразу"
                        android:layout_width="300dp"
                        android:layout_height="60dp" android:id="@+id/playerOneNextEmotionAndPhraseButton"
                        android:textSize="20sp" app:cornerRadius="15dp"
                        android:onClick="onNextPlayerOnePhraseButtonClick" android:backgroundTint="@color/red"/>
                <Button
                        android:text="{{---}}"
                        android:layout_width="150dp"
                        android:layout_height="60dp" android:id="@+id/bothPlayersNextEmotionAndPhraseButton"
                        android:textSize="20sp" app:cornerRadius="15dp"
                        android:layout_marginStart="7dp"
                        android:layout_marginEnd="7dp"
                        android:onClick="onNextPhrasesAndEmotionsButtonClick" android:backgroundTint="@color/red"/>
                <Button
                        android:text="Сменить эмоцию и фразу"
                        android:layout_width="300dp"
                        android:layout_height="60dp" android:id="@+id/playerTwoNextEmotionAndPhraseButton"
                        android:textSize="20sp" app:cornerRadius="15dp"
                        android:onClick="onNextPlayerTwoPhraseButtonClick" android:backgroundTint="@color/red"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>